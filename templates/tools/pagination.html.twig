{% if pages >= 1 %}
    <div class="tricks_pagination">
        <nav>
            <ul class="pagination">
                {% if currentPage > 1 %}
                    <li class="page-item">
                        <a  href="{{ path(path, {slug: slug, page: currentPage - 1}) }}#comments" class="page-link">&lt;</a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <a class="page-link">&lt;</a>
                    </li>
                {% endif %}
                {% for page in 1..pages %}
                    <li class="page-item {{ (page == currentPage) ? 'active' : '' }}">
                        <a  href="{{ path(path, {slug: slug, page: page}) }}#comments" class="page-link">{{ page }}</a>
                    </li>
                {% endfor %}
                <li class="page-item">
                {% if currentPage < pages %}
                    <li class="page-item">
                        <a  href="{{ path(path, {slug: slug, page: currentPage + 1}) }}#comments" class="page-link">&gt;</a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <a class="page-link">&gt;</a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>
{% endif %}